{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "baseUrl": ".",
    "outDir": "./dist/src",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "skipLibCheck": true
  },
  "exclude": ["../node_modules", "spec", "e2e"],
  "compileOnSave": false,
  "buildOnSave": false
}
